<div class="header">
    <img src="/images/hangman.jpg" alt="Hangman Logo">
    <h1>{{gameTitle}}</h1>
</div>

<div class="game-container">
    <div class="left">
        <img src="/images/hangman.jpg" alt="Hangman Image">
        <h2>Pick A Letter</h2>

        <form action="/game/guess" method="POST">
            <select name="letter" id="letterSelect">
                {{#each letters}} <!-- Use the remaining letters array -->
                    <option value="{{this}}">{{this}}</option>
                {{/each}}
            </select>
            <button type="submit">Pick Letter</button>
        </form>
    </div>

    <div class="middle">
        <!-- Start New Game Button -->
        <form action="/game/new" method="GET">
            <button type="submit">Start New Game</button>
        </form>
    </div>

    <div class="right">
        <p>Word: {{wordDisplay}}</p>
        <p>Hint: {{hint}}</p>
        <p>Remaining Guesses: {{remainingGuesses}}</p>
        <p>Guessed Letters: {{guessedLetters}}</p>

        <!-- Display game status -->
        {{#if gameOver}}
            <h2>{{#if (eq gameOver.status "win")}}You Won!{{else}}Game Over{{/if}}</h2>
            <p>{{gameOver.message}}</p>
            <img src="/images/game-over-image.jpg" alt="Game Over Image"> <!-- Placeholder for your image -->
        {{/if}}
    </div>
</div>
